// @flow

type CssModuleType = {
    [string]: string;
} | {
    +[string]: string;
};

type ModsType = {
    [string]: boolean | string | number;
};

type StatesType = {
    [string]: boolean;
};

type Options = {|
    throwOnError?: boolean;
|};

interface Block {
    (element?: string | null, mods?: ModsType | null, states?: StatesType | null): string;
    (mods?: ModsType | null, states?: StatesType | null): string;
}

interface Module {
    (cssModule: CssModuleType, name?: string): Block;
    setSettings(options: Options): void;
}

declare var bemModule: Module;

export default bemModule;
